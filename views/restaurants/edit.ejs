<%- include("../partials/header.ejs") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Make a Change to <%= restaurant.name %></h1>
		<div style="width: 30%; margin:30px auto;">
			<!--special syntax for put requests-->
			<form action="/restaurants/<%= restaurant._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<!--by putting values in restaurant[] we can grab the whole restaurant obj in one go from req-->
					<input class="form-control" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[image]" value="<%= restaurant.image %>l">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
				</div>
				<div class="form-group">
					<label for="rating">Rating</label>
    					<select class="form-control" id="rating" name="restaurant[rating]">
      						<option value=1>1 Star</option>
      						<option value=2>2 Star</option>
      						<option value=3>3 Star</option>
      						<option value=4>4 Star</option>
      						<option value=5>5 Star</option>
    					</select>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">submit</button>
				</div>
			</form>
			<a href="/restaurants">go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs") %>