<%- include("../partials/header.ejs") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">make some changes:</h1>
		<div style="width: 30%; margin:30px auto;">
			<form action="/restaurants/<%= restaurantId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<!--text and author will be stored in body wrapped together under comment-->
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">submit</button>
				</div>
			</form>
			<a href="/restaurants">go back</a>
		</div>
	</div>
</div>

